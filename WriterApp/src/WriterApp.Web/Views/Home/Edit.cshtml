@model WriterApp.Web.ViewModel.WriterEditModel
@{
    ViewData["Title"] = "Edit Page";
}
<h2>Edit</h2>

<form asp-controller="Home" asp-action="Edit" method="post">    
    <div class="form-group">
        <input asp-for="@Model.LastName" placeholder="Last name" class="form-control" />
        <span asp-validation-for="@Model.LastName" class="text-danger"></span>
    </div>
    <div class="form-group">
        <input asp-for="@Model.FirstName" placeholder="First name" class="form-control" />
        <span asp-validation-for="@Model.FirstName" class="text-danger"></span>
    </div>
    <div class="form-group">
        <input asp-for="@Model.DateOfBirth" type="date" placeholder="Date of birth" class="form-control" />
        <span asp-validation-for="@Model.DateOfBirth" class="text-danger"></span>
    </div>
    <div class="form-group">
        <textarea asp-for="@Model.Biography" placeholder="Writer biography" class="form-control"></textarea>
        <span asp-validation-for="@Model.Biography" class="text-danger"></span>
    </div>
    <input type="submit" value="Submit" class="btn btn-default" />
</form>